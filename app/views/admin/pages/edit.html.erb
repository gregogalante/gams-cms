<% provide(:title, "#{$language['edit'].capitalize} #{$language['page_singular']}") %>

<div class="home panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= yield(:title) %></h3>
  </div>
  <div class="panel-body">
    <div class="col-md-12 col-lg-12 text-right">
      <%= getLanguageSelector() %>
    </div>
    <%= form_tag(admin_page_path(@page.id), method: "put", multipart: true, action: :update) do %>

      <% @fields.each do |field| %>
        <div class="col-md-12 col-lg-12">
          <%= putFieldName(field.name) %>
          <%= getInputField(field.name, field.page_id, "field[#{field.id}]") %>
        </div>
      <% end %>

      <div class="col-md-12 col-lg-12">
        <input class="btn btn-primary" type="submit" value="<%= $language['save'] %>">
      </div>

    <% end %>
  </div>
</div>
