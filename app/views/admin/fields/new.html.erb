<% provide(:title, "#{$language['new'].capitalize} #{$language['field_singular']}") %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= yield(:title) %></h3>
  </div>
  <div class="panel-body">
    <%= form_tag(admin_fields_path, method: "post", multipart: true, action: :create) do %>

    <div class="col-md-6 col-lg-6">
      <h4 class="field-title"><%= $language['name'].capitalize %></h4>
      <div class="input-group">
        <label class="input-group-addon"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></label>
        <input class="form-control" type="text"  name="name">
      </div>
      <br>
    </div>

    <div class="col-md-6 col-lg-6">
      <h4 class="field-title"><%= $language['title'].capitalize %></h4>
      <div class="input-group">
        <label class="input-group-addon"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></label>
        <input class="form-control" type="text"  name="title">
      </div>
      <br>
    </div>

    <div class="col-md-4 col-lg-4">
      <h4 class="field-title"><%= $language['field_type'].capitalize %></h4>
      <select class="selectpicker" name="type" data-live-search="true">
        <option value="text"><%= $language['text'].capitalize %></option>
        <option value="number"><%= $language['number'].capitalize %></option>
        <option value="textarea"><%= $language['textarea'].capitalize %></option>
        <option value="editor"><%= $language['editor'].capitalize %></option>
        <option value="image"><%= $language['image'].capitalize %></option>
      </select>
      <br>
    </div>

    <div class="col-md-4 col-lg-4">
      <h4 class="field-title"><%= $language['page_singular'].capitalize %></h4>
      <select class="selectpicker" name="page" data-live-search="true">
        <% @pages.each do |page| %>
          <option value="<%= page.id %>"><%= page.title %></option>
        <% end %>
      </select>
      <br>
    </div>

    <div class="col-md-4 col-lg-4">
      <h4 class="field-title"><%= $language['position'].capitalize %></h4>
      <div class="input-group">
        <label class="input-group-addon"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></label>
        <input class="form-control" type="number"  name="position">
      </div>
      <br>
    </div>

    <div class="col-md-12 col-lg-12">
      <input class="btn btn-primary" type="submit" value="<%= $language['save'].capitalize %>">
    </div>

    <% end %>
  </div>
</div>
