<% provide(:title, "#{$language['show'].capitalize} #{$language['user_singular']}") %>

<div class="home panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= yield(:title) %></h3>
  </div>
  <div class="panel-body">
    <div class="col-md-12 col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= $language['name'].capitalize %></h3>
        </div>
        <div class="panel-body">
          <%= @user.name %>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= $language['email'].capitalize %></h3>
        </div>
        <div class="panel-body">
          <%= @user.email %>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= $language['permissions'].capitalize %></h3>
        </div>
        <div class="panel-body">
          <% case @user.permissions %>
            <% when 0 %>
              <%= $language['administrator'].capitalize %>
            <% when 1 %>
              <%= $language['editor'].capitalize %>
            <% when 2 %>
              <%= $language['collaborator'].capitalize %>
            <% else %>
              <%= $language['user_singular'].capitalize %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-12 col-lg-12">
      <%= link_to $language['edit'].capitalize, edit_admin_user_path(@user), class: "btn btn-info" %>
      <%= link_to $language['delete'].capitalize, admin_user_path(@user), :method => :delete, data: {confirm: $language['user_delete_confirmation']}, class: "btn btn-danger" %>
    </div>
  </div>
</div>
